{
  "name": "playground-docs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "generate-docs": "./bin/generate-docs.js"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"yarn watch:docs\"",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "watch:docs": "onchange \"docs/*.mdx\" -- yarn generate-docs",
    "deploy": "yarn build && firebase deploy"
  },
  "dependencies": {
    "@paulhalleux/docs-generator": "^0.0.0",
    "@paulhalleux/react-playground": "^0.0.0",
    "clsx": "^2.0.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.14.2",
    "react-router-dom": "^6.14.2",
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "onchange": "^7.1.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
